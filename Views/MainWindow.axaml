<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BalanceAval.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:views="clr-namespace:BalanceAval.Views"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BalanceAval.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="BalanceAval">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />

		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>


		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
			<Button  Command="{Binding Start}" IsEnabled="{Binding StartEnabled}">Start</Button>
			<Button Command="{Binding Stop}" IsEnabled="{Binding StopEnabled}">Stop</Button>

			<ItemsControl Items="{x:Static vm:MainWindowViewModel.Errors}" >
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Vertical" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBox IsReadOnly="True" Margin="10" AcceptsReturn="True"
                                 TextWrapping="Wrap" AcceptsTab="True" Text="{Binding Message}" Foreground="#FF0000"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" MaxWidth="500" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>

		<ScrollViewer Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
			<ItemsControl Items="{Binding CartesianViewModels }" >
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Vertical" HorizontalAlignment="Left"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<lvc:CartesianChart Height="200" Width="600"
                                            Series="{Binding Series}"
                                            DrawMarginFrame="{Binding DrawMarginFrame}"
                                            YAxes="{Binding YAxes}"
                                            XAxes="{Binding XAxes}">
						</lvc:CartesianChart>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<ScrollViewer Grid.Row="1" Grid.Column="1" MaxHeight="400" VerticalAlignment="Top">
			<StackPanel Orientation="Vertical">
				<StackPanel Orientation="Horizontal">
					<Button Command="{Binding Browse}">Browse</Button>
					<TextBlock Text="{Binding Folder}" Margin="8,0,0,0"></TextBlock>
				</StackPanel>

				<ItemsControl Items="{Binding Slots}" >
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Vertical" HorizontalAlignment="Left"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Button Command="{Binding Save}" IsEnabled="{Binding !IsBusy}">Save</Button>
								<TextBlock Margin="10,0,0,0" Text="{Binding Time}"></TextBlock>
							</StackPanel>

						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</ScrollViewer>

        <Canvas Grid.Column="1" Grid.Row="2" Width="300" Height="300" Background="Yellow" >

			<views:PolyLineCustom Points="0,0 3,3"
                            Stroke="Black"
                            StrokeThickness="1"
                            Canvas.Top="150"
                            Canvas.Left="150" NewPoint="{Binding NewPoint}">
				
            </views:PolyLineCustom>
        </Canvas>
		<!--<ItemsControl Grid.Row="1" Grid.Column="1" Items="{Binding LinePoints}">
            <ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
                    <Canvas Width="100" Height="100" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Line StartPoint="{Binding}"></Line>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->
    </Grid>

</Window>
